@{
}

<form asp-controller="Sample01" asp-action="ValidationSamplePost">
    <div>
        <input type="text" asp-for="@Model.num" />
        <span asp-validation-for="@Model.num" class="text-danger"></span>
    </div>
    <div>
        <input type="text" asp-for="@Model.Id" />
        <span asp-validation-for="@Model.Id" class="text-danger"></span>
    </div>
    <div>
        <input type="text" asp-for="@Model.Name" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="登録" />
    </div>
</form>

<div>num:@Html.DisplayFor(m => m.num)</div>
<div>ID:@Html.DisplayFor(m => m.Id)</div>
<div>Name:@Html.DisplayFor(m => m.Name)</div>

